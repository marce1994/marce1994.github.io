---
interface CardProps {
	title: string;
	subtitle: string;
	date?: string;
	description: string;
	link?: string;
	image?: string;
}

const { title, subtitle, date, description, link, image } =
	Astro.props as CardProps;
---

<li class="mb-4 h-full">
	<article class="h-full flex row gap-6 rounded border-gray-700 border p-6">
		{
			image && (
				<div class="min-w-16 flex justify-center">
					<img src={image} alt={title} class="rounded w-16 h-16" />
				</div>
			)
		}
		<div>
			<h2 class="text-xl font-bold text-white">{title}</h2>
			<h3 class="text-lg font-medium text-white">{subtitle}</h3>
			{date && <p class="text-gray-300">{date}</p>}
			<p class="text-gray-400">{description}</p>
			{
				link && (
					<a
						href={link}
						target="_blank"
						class="text-blue-400 hover:underline"
					>
						Learn more
					</a>
				)
			}
		</div>
	</article>
</li>
