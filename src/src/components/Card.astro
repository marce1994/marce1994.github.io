---
interface Props {
	company: string;
	position: string;
	duration: string;
	description: string;
}

const { company, position, duration, description } = Astro.props;
---

<li class="mb-4">
	<a href="#" class="text-[#ff0000] hover:[#ff00ff]">
		<h2 class="text-xl font-bold text-white">{company}</h2>
		<h3 class="text-lg font-medium text-white">{position}</h3>
		<p class="text-gray-300">{duration}</p>
		<p class="text-gray-400">{description}</p>
	</a>
</li>
