---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<header>
			<nav class="flex justify-end px-6 py-4">
				<a href="#" class="mr-4">Posts</a>
				<a href="#" class="mr-4">Work</a>
				<a href="#" class="mr-4">GitHub</a>
			</nav>
		</header>
		<slot />
		<footer class="bg-gray-900 text-white">
			<div class="grid grid-cols-2 gap-4 p-8">
				<div>
					<h3 class="text-lg font-bold">Contact Information</h3>
					<p>Email: example@example.com</p>
					<p>Phone: 123-456-7890</p>
				</div>
				<div>
					<h3 class="text-lg font-bold">Social Networks</h3>
					<a href="https://twitter.com/example" class="block"
						>Twitter</a
					>
					<a href="https://linkedin.com/in/example" class="block"
						>LinkedIn</a
					>
					<a href="https://github.com/example" class="block">GitHub</a
					>
				</div>
			</div>
		</footer>
	</body>
</html>
